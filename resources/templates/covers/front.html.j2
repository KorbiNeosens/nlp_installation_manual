    }

    section .title, 
    section .version {
      display: block; /* Ensure block-level behavior */
      width: 100%; /* Force full width */
      margin: 0; /* Remove any default margins */
    }

    section .title {
      font-size: 32pt;
      font-weight: 500;
      line-height: 1.1;
      margin-top: 1em;
      color: #fff;
      string-set: title content(text);
      width: 100%;
    }

    section .version {
      line-height: 1.5;
      font-size: 14pt; /* Slightly larger font size */
      font-family: monospace;
      color: #fff;
      width: 100%;
    }
  }

  @page {
    @top-center {
      font-size: 9pt;
      color: #fff;
      content: '{{ config.site_name }}' ' â€” ' string(title);
    }
  }

  @page :first {
    margin: 0;
    background: var(--md-primary-fg-color);

    @top-center {
      content: none;
    }

    @bottom-center {
      content: none;
    }
  }
</style>
